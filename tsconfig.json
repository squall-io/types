{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "emitDeclarationOnly": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "outFile": "./index.js",
    "skipLibCheck": true,
    "declaration": true,
    "rootDir": "./src",
    "target": "es2015",
    "strict": true
  },
  "exclude": [
    "build.ts",
    "**/*.d.ts"
  ]
}
